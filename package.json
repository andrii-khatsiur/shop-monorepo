{
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run --filter '*' dev",
    "api:dev": "bun run --filter @apps/api dev",
    "admin:dev": "bun run --filter @apps/admin dev",
    "web:dev": "bun run --filter @apps/web dev",
    "build": "bun run --filter '*' build",
    "env:copy": "bun run scripts/copy-env.js",
    "db:seed": "bun run apps/api/src/db/seed.ts",
    "db:reset": "bun run apps/api/src/db/reset.ts",
    "db:fresh": "bun run db:reset && bun run db:seed"
  }
}
